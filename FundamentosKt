fun main() {
    /*var mes =5
    
    when(mes){
        1 -> {println("Lisboa")}
        2 -> {println("Nova York")}
        4 -> {println("Canada")}
        5 -> {println("Holanda")}
        6 -> {println("Japao")}
        7 -> {println("Barcelona")}
        8 -> {println("EUA")}
