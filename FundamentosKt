fun main() {

    //na pratica operadores logicos
    //
    //Minha mae pediu para eu ir na loja de talheres e ela falou: 
    //traga uma concha de feijao, se tiver garfo E colher
    //
    /*
var garfo = false
var faca = true
var colher = true

//println(garfo && faca)
println(garfo && (faca || colher))
*/

//show do Pericles
//Pro cidadao menor de 18 anos entrar ele precisa ter ao menos 12 anos E acompanhao dos pais.
/*
var idade = 12
var compais = false
var comident = false

if(idade < 18){
    if((idade  >= 12 && comident == true) || compais == true){
		println("Bom show jovem")
	}else{
        if(idade < 18 && idade < 12 && compais == false){
			println("Sinto muito, traga seus pais")
		}else{
			println("Sinto muito, nao pode entrar")
        }
	}
	
}else{
	println("Bem-vindo! Curta o show.")
}
*/
//Exercicio: No metroidVania, para o Hero ir para a tela de Game Over, 
//seus coracoes precisam ser igual a zero e
// suas vidas precisam ser menor ou igual a zero
// simule com operadores logicos quando ele vai para o GameOver
// e quando ele nao vai

var coracao = 0
var vidas = 2
    
if (coracao == 0 && vidas <= 0){
	println("Game Over!")
}else{
	println("Ainda vivo, continue")
}

var a = 1
var b = 2
var c = 3

while(c <= 6){
	println("$a,$b,$c")
	c ++
}
    

}
