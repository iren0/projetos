    println()
    println("Calculos para os numeros 10 e 15")
    println()
    println("A soma dos numeros $num1 e $num2 é igual a: ${(num1 + num2)}")
    println("A equação de subtraçao do numero $num2 menos o numero $num1 é igual a: ${(num2 - num1)}")
    println("A multiplicaçao dos numeros $num1 e $num2 é igual a: ${(num2 * num1)}")
    println("A divisão entre os numeros $num2 e $num1 é igual a: ${(num2 / num1)}")
    println("A sobra da divisao entre os numeros $num2 e $num1 é igual a: ${(num2 % num1)}")
    println()
    println("*************************FIM**************************")
   */
    
// Operadores relacionais
// 
//  == -> igual a..
//  != -> diferente de ..
// ! -> negando valor
// > maior que
// < menor que
// >= maior ou igual a..
// <= menor ou igual a..
// 
// ++ -> adiciona 1 a um valor
// -- -> subtrai 1 do valor
// += -> adiciona um determinado valor a um valor
// -= -> subtrai um determinado valor a um valor
// 
/*
var clau = 50
var jose = 30
var bere = 90
var bern = 80

println(clau)
clau++
println(clau)   

println(jose)
jose--
println(jose)

println(bere)
bere += clau
println(bere)

println(bern)
bern -= jose
println(bern)
*/
    
// condicoes if..else
// se ... senao
// 
// if .. else  simples
// 
// estrutura:
// if(condicao){
// acao
// }
// else{
// acao
// }
// 
/*   
var interr = true

if(interr != true){
	println("Luz acesa :)")
}else(
	println("Luz apagada :( ")
)
*/
var fome = true

if(fome){
	println("Alimente-se!")
}else{
    println("Alimentou-se")
}

}
