import java.time.LocalDateTime
import java.time.format.DateTimeFormatter

import java.util.Date
 
fun main() {
    // Concatenaçao
    // 
    // 
    /*
    var tartaruga = "Michael"
    
    println("O nome da tartaruga do Kilyan Mdappe é $tartaruga")
    
    println("O nome da tartaruga do Kilyan Mdappe é " + tartaruga)
    
    var lecrerc = 2
    var alonso = 1
    
    println("A posicao do Lek lek + a posicao do Alonso é igual a ${(lecrerc + alonso)}")
    println("A posicao do Lek lek + a posicao do Alonso é igual a " +(lecrerc + alonso))
   
    var nome = "Ireno"
    var idade = 39
    var cidade = "Sao Paulo"
    
    println("O meu nome é $nome, eu tenho $idade anos e moro em $cidade")
    */
    //Exercício - faça um dialogo de no minimo 15 linhas, nele deve conter, 
    //os nomes de quem esta falando de forma concatenada usando variaveis 

    var nome = "Ireno Prado" 
    var curso = "Programação Mobile"
    var escola = "BMS"
    var idade = 39
    var date = "Segunda-feira"
    var profissao = "programador"
    var salario = 30000
    var acrescimo = 10000
    
    val datetime = LocalDateTime.now()
    .format(DateTimeFormatter.ofPattern("MMMM dd yyyy"))
    
 	val data = Date()
   
    println(data)
    
    println("**Entrevista de emprego**")
	println()
    println("Bom dia, hoje é $datetime")
    println("Vamos começar nossa entrevista")
    println("Qual seu nome?")
    println("Me chamo $nome")   
    println("Qual sua profissão?")
    println("Trabalho atualmente como $profissao")
    println("Qual sua idade?")
    println("Tenho $idade anos")   
    println("Onde você estudou programação?")
    println("Estudei na escola $escola")
    println("E qual o nome do curso que estudou?")
	println("O nome do curso é: $curso")
    println("Qual seu ultimo salario?")
    println("Meu ultimo salario foi de R$$salario")
    println("Qual sua pretensão salarial atual?")
    println("Minha pretensao salarial atual é de R$${(salario + acrescimo)}")
    println("Parabens vc tem a vaga!")
  }

