//Exercicio: A cada mes do ano uma turma de 5 alunos entra um aluno novo
//cria a lista inicial de alunos da turma
//a cada mes adicione um novo aluno(em linhas diferentes)
//em dois meses do ano, 2 alunos foram transferidos da turma
//e em dois meses do ano, dois alunos foram substituidos por outros dois(dica: substituidos em meses diferentes)
//exiba a lista de alunos respectiva de cada mes do ano.

var sala = mutableListOf<String>("Pedro", "Davi", "Natalia", "Jose", "Maria")
println("Sala Inicial:"+ sala)
sala.add("Nadia")
println("Sala Janeiro:"+ sala)
sala.add("Batista")
println("Sala Fevereiro:"+ sala)
sala.add("Miguel")
println("Sala Março:"+ sala)
sala.removeAt(0)
sala.add("Adilson")
println("Sala Abril:"+ sala)
sala.add("Fabio")
println("Sala Maio:"+ sala)
sala.add("Gisele")
sala.set(2, "Vanderlei")
println("Sala Junho:"+ sala)
sala.add("Flavia")
println("Sala Julho:"+ sala)
sala.add("Pedro Henrique")
sala.set(4, "Kiko")
println("Sala Agosto:"+ sala)
sala.add("Cassia")
println("Sala Setembro:"+ sala)
sala.add("Eduardo")
println("Sala Outubro:"+ sala)
sala.removeAt(3)
sala.add("Ireno")
println("Sala Novembro:"+ sala)
sala.add("Guilherme")
println("Sala Dezembro:"+ sala)

}
//-----------------------------------------------------------------------------------
//POO
//
//programacao orientada a objetos
//
//objetivo: simular atividades e situacoes do mundo real
//
//Objeto - elementos que podem interagir com um sistema Ex: Pé
//
//classe - denominacao de um determinado objeto Ex: Membro do corpo
//
//atributos - caracteristicas, propriedades, parametros ex: tamanho
//
//Metodos - atividades, açoes, que o objeto pode realizar ex: chutar
//
//Herança - atributos de um objeto que sao herdados de uma classe
//-------------------------------------------------------------------------------
fun main() {

	var ireno = Pessoa() //instanciamos um objeto
	
	//println(pessoa1.peso)//exibir um atributo de um obj
    //pessoa1.nome = "Whinderson" //alterar o valor de um atributo de um obj
    //println(pessoa1.nome + "," + pessoa1.idade)
    
    //Exercicio -> Faça uma apresentacao sua utilizando a classe Pessoa() ja criada e utilizando pelo 
    //menos, todos os atributos que existem na classe
    
    ireno.nome = "Ireno Prado"
	ireno.idade = 41
    ireno.nacionalidade = "Brasilian"
    ireno.idioma = "Portuguese, English, Spanish, German, Dutch and Chinese"
    ireno.profissao = "LA, Head Sales"
    println("Name: "+ireno.nome)
    println("Age: "+ireno.idade)
    println("Nationality: "+ireno.nacionalidade)
    println("Language: "+ireno.idioma)
    println("Occupation: "+ireno.profissao)


}

class Pessoa{
//atributos que toda pessoa pode ter
	var nome = ""
    var idade = 0
	var nacionalidade = ""
	var idioma = "Portugues" //Valor inicial
	var profissao = ""


}
